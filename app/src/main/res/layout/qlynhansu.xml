<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".quanly">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Quản Lý Nhân Sự"
        android:textColor="#EC0909"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="FOLY SOFTWARE COMPANY"
        android:textColor="#756060"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20sp">

        <LinearLayout
            android:background="@drawable/edt_phongban"
            android:id="@+id/lin_phongBan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="73dp"
                android:layout_height="70dp"
                android:src="@drawable/anh4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15sp"
                android:text="Phòng Ban"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/edt_phongban"
            android:id="@+id/lin_nhanvien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60sp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="72dp"
                android:src="@drawable/anh5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15sp"
                android:text="Nhân Viên"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_thoat"
        android:layout_width="wrap_content"
        android:layout_height="99dp"
        android:layout_marginTop="40sp"
        android:background="@drawable/edt_phongban"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="68dp"
            android:layout_height="72dp"
            android:src="@drawable/anh6" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15sp"
            android:gravity="center_horizontal"
            android:text="Thoát"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>